{
  "openapi": "3.0.0",
  "info": {
    "title": "Save topic test result",
    "description": "This API allows for updating the free recall and quiz test result.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Main API server"
    }
  ],
  "paths": {
    "/internal_tools": {
      "patch": {
        "operationId": "updateTopicQuizResult",
        "summary": "Updates a topic free recall test quiz result.",
        "description": "This endpoint updates a topic free recall test quiz result.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["test_result"],
                "properties": {
                  "test_result": {
                    "type": "integer",
                    "description": "The score out of 100."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Topic test result updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request in updating topic"
          },
          "404": {
            "description": "Topic not found"
          }
        }
      }
    }
  }
}

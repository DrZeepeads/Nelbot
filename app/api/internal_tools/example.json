{
  "openapi": "3.0.0",
  "info": {
    "title": "Start a study session",
    "description": "Notifies app to progress to Study session. Should only be called if user request to start study session",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Main API server"
    }
  ],
  "paths": {
    "/internal_tools": {
      "patch": {
        "operationId": "proceedToLearning",
        "summary": "Notifies app to set app state to Study mode.",
        "description": "When this endpoint is triggered, the app will enter study mode.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["study_mode"],
                "properties": {
                  "study_mode": {
                    "type": "boolean",
                    "description": "Whether the study mode should start."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Study mode started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request in updating topic"
          },
          "404": {
            "description": "Topic not found"
          }
        }
      }
    }
  }
}
